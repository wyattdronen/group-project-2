<div class="row">
  <div class="col-auto">
    <h2>Welcome Back!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add an Exercise:</h3>

    <form class="form new-exercise-form">
      <div class="form-group">
        <label for="exercise-name">Exercise name:</label>
        <input class="form-input" type="text" id="exercise-name" name="exercise-name" />
      </div>
      <div class="form-group">
        <label for="exercise-type">Type of exercise:</label>
        <select class="form-input" id="exercise-type" name="exercise-type">
          <option value="cardio">Cardio</option>
          <option value="strength">Strength Training</option>
          <option value="flexibility">Flexibility</option>
        </select>
      </div>
      <div class="form-group">
        <label for="max-weight">Max weight (lbs):</label>
        <input class="form-input" type="number" id="max-weight" name="max-weight" />
      </div>
      <div class="form-group">
        <label for="routine-id">Routine ID:</label>
        <input class="form-input" type="text" id="routine-id" name="routine-id" />
      </div>
<div class="form-group">
      <button type="submit" class="btn btn-primary">Add Exercise</button>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <button class="primary-button" onclick="window.location.href='/routine'">Go to Routine Page</button>
  </div>
</div>

<script src="/js/profile.js"></script>
